{
  "private": true,
  "name": "@clementohnz/presentation-angular",
  "description": "Presentation layer implemented in Angular (clean architecture external interfaces layer).",
  "license": "UNLICENSED",
  "author": "Clement Oh",
  "repository": "git@github.com:clementohNZ/monorepo-reference.git",
  "version": "0.0.0",
  "main": "dist/index",
  "files": [
    "dist"
  ],
  "scripts": {
    "build:client": "ng build",
    "build:ssr": "ng build --prod && ng run reference-angular:server:production",
    "clean": "node_modules/.bin/rimraf -rf ./dist",
    "compile": "tsc -p tsconfig.build.json",
    "dev:ssr": "ng run reference-angular:serve-ssr",
    "e2e": "npx codeceptjs run --steps --verbose",
    "e2e:new": "npx codeceptjs gt",
    "e2e:ui": "npx codecept-ui --app",
    "format:packageJson": "npx prettier-package-json ./package.json --write",
    "postinstall": "ngcc --properties es2015 browser module main --first-only --create-ivy-entry-points",
    "lint": "npx eslint .",
    "ng": "ng",
    "prepublishOnly": "yarn run build",
    "prerender": "ng run reference-angular:prerender",
    "serve:ssr": "node dist/reference-angular/server/main.js",
    "start:dev": "ng run reference-angular:serve-ssr",
    "test": "jest --verbose"
  },
  "dependencies": {
    "@angular/animations": "~10.2.0",
    "@angular/common": "~10.2.0",
    "@angular/compiler": "~10.2.0",
    "@angular/core": "~10.2.0",
    "@angular/forms": "~10.2.0",
    "@angular/platform-browser": "~10.2.0",
    "@angular/platform-browser-dynamic": "~10.2.0",
    "@angular/platform-server": "~10.2.0",
    "@angular/router": "~10.2.0",
    "@clementohnz/core": "^0.0.0",
    "@clementohnz/data": "^0.0.0",
    "@clementohnz/presentation-common": "^0.0.0",
    "@ngrx/store": "^10.0.1",
    "@nguniversal/express-engine": "^10.1.0",
    "express": "^4.15.2",
    "rxjs": "~6.6.0",
    "tslib": "^2.0.0",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.1002.0",
    "@angular/cli": "~10.2.0",
    "@angular/compiler-cli": "^10.2.1",
    "@codeceptjs/ui": "^0.4.2",
    "@nguniversal/builders": "^10.1.0",
    "@sentry/browser": "^5.27.2",
    "@types/express": "^4.17.0",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.11.1",
    "codelyzer": "^6.0.1",
    "jest": "^26.6.1",
    "jest-preset-angular": "^8.3.2",
    "prettier": "^2.1.2",
    "prettier-package-json": "^2.1.3",
    "rimraf": "^3.0.2",
    "ts-node": "~8.3.0",
    "typescript": "~4.0.2"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupFilesAfterEnv": [
      "<rootDir>/setupJest.ts"
    ],
    "testMatch": [
      "**/*.spec.ts"
    ],
    "moduleNameMapper": {
      "^@app/(.*)$": "<rootDir>/src/app/$1",
      "^@core/(.*)$": "<rootDir>/src/app/core/$1",
      "^@data/(.*)$": "<rootDir>/src/app/data/$1",
      "^@presentation/(.*)$": "<rootDir>/src/app/presentation/$1",
      "^@env/(.*)$": "<rootDir>/src/environments/$1"
    }
  }
}
